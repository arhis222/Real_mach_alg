--utilisation top_debug
-- inst_top8.lus

-- On fixe n = 8
node top8(
  begin   : bool;
  chM     : bool;
  chEXP   : bool;
  chN     : bool;
  input   : int
)
returns (
  m      : int;
  exp    : int;
  n      : int;
  end_    : bool;
  q      : int;
  -- Signaux de débogage
  etat_courant : bool^11;
  Sig_chExp : bool;
  Sig_chCode : bool;
  Sig_chN: bool;
  Sig_chM : bool;
   mise_1 : bool;

);
let
  -- On déplie top_debug avec n=8
   (m, exp, n, end_, q, etat_courant,Sig_chExp,Sig_chCode,Sig_chN,Sig_chM, mise_1 ) =
    top_debug<<8>>(begin, chM, chEXP, chN, input);
tel;



-- natier :

-- natier8.lus
-- Convertit un entier i en vecteur de 8 bits (LSB en position 0)
function natier8(i:int) returns (b: bool^8);
let
  b[0] = (i mod 2) = 1;
  b[1] = ((i / 2)   mod 2) = 1;
  b[2] = ((i / 4)   mod 2) = 1;
  b[3] = ((i / 8)   mod 2) = 1;
  b[4] = ((i / 16)  mod 2) = 1;
  b[5] = ((i / 32)  mod 2) = 1;
  b[6] = ((i / 64)  mod 2) = 1;
  b[7] = ((i / 128) mod 2) = 1;
tel;

